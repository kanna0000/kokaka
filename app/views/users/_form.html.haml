
.columns
  .form-group.col-mx-auto
    = form_for @user do |f|
      - if @user.errors.any?
        #error_explanation
          %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
          %ul
            - @user.errors.full_messages.each do |message|
              %li= message

      .field.col-mx-auto
        = f.label :username, class: 'form-label'
        = f.text_field :username, class: 'form-input'
        = f.label :password, class: 'form-label'
        = f.password_field :password, class: 'form-input'
        = f.label :password_confirmation, class: 'form-label'
        = f.password_field :password_confirmation, class: 'form-input'
      .actions
        .columns
          = f.submit 'Sign up', class: ['column', 'column-mx-auto', 'btn', 'mx-2', 'mt-2']
