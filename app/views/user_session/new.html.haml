.container
  .columns
    %p= flash[:alert]
    %h1.col-mx-auto Login
  .columns
    .form-group.col-mx-auto
      = form_tag user_session_index_path, method: :post do
        = label_tag :username, nil, class: 'form-label'
        = text_field_tag :username, nil, class: 'form-input'
        = label_tag :password, nil, class: 'form-label'
        = password_field_tag :password, nil, class: 'form-input'
        .columns.mt-2
          = submit_tag "Login", class: ['column', 'column-mx-auto', 'btn', 'mx-2', 'mt-2']
